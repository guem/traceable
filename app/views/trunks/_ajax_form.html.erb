<% #remote_form_for :trunk, @trunk, :url => trunks_url do |f| %>
<% form_for @trunk do |f| %>
<table>
  <tr>
     <td colspan="2">
        <label for="trunk_traceable" >Traceable</label>
        <%= f.text_field :traceable, :size => 15 %>
        <%= error_message_on(:trunk, :traceable)%>
     </td>
     <td>
        <label for="trunk_kind" >Species</label>
        <%= f.collection_select :kind_id, Kind.find(:all), :id, :display_name, {:prompt => true} %>
        <%= error_message_on(:trunk, :kind)%>
     </td>
  </tr>
  <tr>
     <td>
        <label for="trunk_loc_lat" >Location Lat</label>
        <%= f.text_field :loc_lat, :size => 15 %>
        <%= error_message_on(:trunk, :loc_lat)%>  
     </td>
     <td>
        <label for="trunk_loc_lon" >Location Lon</label>
        <%= f.text_field :loc_lon, :size => 15 %>
        <%= error_message_on(:trunk, :loc_lon)%> 
     </td>
     <td rowspan="2">
        <label for="trunk_description">Description</label>
        <%= f.text_area :description, :cols => 35, :rows => 5 %>
        <%= error_message_on(:trunk, :description) %>
     </td>
  </tr>
  <tr>
    <td colspan="2">
        <label for="trunk_volume">Volume</label>
        <%= f.text_field :volume, :size => 15 %>
        <%= error_message_on(:trunk, :volume) %>
    </td>
  </tr>

</table>
  
<p>
  <%= submit_tag submit_text %>
</p>
<% end %>