<% form_for (@trunk) do |f| %>

  <!--  <p><%=image_tag @trunk.picture.url(:thumb) %><p> -->

Wer ruft das noch auf? New!

  <p>
    <label for="trunk_traceable">Traceable id</label>
    <%= f.text_field :traceable, :size => 12 %>
    <%= error_message_on(:trunk, :traceable) %>
  </p>
  <p>
    <label for="trunk_kind">Species</label>
    <%= f.collection_select :kind_id,
      Kind.find(:all), :id, :scientific, {:prompt => true} %>
    <%= error_message_on(:trunk, :kind) %>
  </p>
  <p>
    <label for="trunk_loc_lat">Location Lat</label>
    <%= f.text_field :loc_lat, :size => 10 %>
    <%= error_message_on(:trunk, :loc_lat) %>
    <label for="trunk_loc_lon">Location Lon</label>
    <%= f.text_field :loc_lon, :size => 10 %>
    <%= error_message_on(:trunk, :loc_lon) %>
  </p>
  <p>
    <label for="trunk_volume">Volume</label>
    <%= f.text_field :volume, :size => 40 %>
    <%= error_message_on(:trunk, :volume) %>
  </p>
  <p>
    <label for="trunk_description">Description</label>
    <%= f.text_area :description, :cols => 31, :rows => 7 %>
    <%= error_message_on(:trunk, :traceable) %>
  </p>
  <p>
    <%= submit_tag submit_text %>
  </p>
<% end %>
